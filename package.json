{
  "name": "gene-expresson-in-rna-seq",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:backend": "cd backend && python -m pip install -r requirements.txt",
    "build:frontend": "npm run build --prefix frontend",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "format:backend": "cd backend && python -m black .",
    "format:frontend": "npm run format --prefix frontend",
    "format": "concurrently \"npm run format:frontend\" \"npm run format:backend\"",
    "lint:backend": "cd backend && python -m flake8 .",
    "lint:frontend": "npm run lint --prefix frontend",
    "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\"",
    "start:backend": "cd backend && python -m uvicorn src.app:app --reload",
    "start:frontend": "npm --prefix frontend start",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "typecheck:backend": "cd backend && python -m mypy .",
    "deps:check:major": "ncu --target latest",
    "deps:update:minor": "ncu -u --target minor && npm install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "concurrently": "^8.2.2",
    "npm-check-updates": "^19.2.0"
  }
}